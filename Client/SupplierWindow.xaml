<Window x:Class="Client.SupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить поставщика" Height="200" Width="300">
    <Grid>
        <Label Content="Наименование поставщика:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="supplierNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,30,0,0" Width="200"/>
        <Button Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" Width="80" Height="30" Click="SaveSupplierButton_Click"/>
    </Grid>
</Window>